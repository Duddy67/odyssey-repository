<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
		        label="COM_ODYSSEY_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="user_id"
			type="componentuser"
			onchange="this.form.submit();" >
			<option value="">COM_ODYSSEY_OPTION_SELECT_USER</option>
		</field>
	</fields>
	<fields name="list">
		<field name="fullordering" type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();" default="" >
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="p.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="p.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="p.published ASC">JSTATUS_ASC</option>
			<option value="p.published DESC">JSTATUS_DESC</option>
			<option value="p.name ASC">COM_ODYSSEY_NAME_ASC</option>
			<option value="p.name DESC">COM_ODYSSEY_NAME_DESC</option>
			<option value="plugin_name ASC">COM_ODYSSEY_PLUGIN_NAME_ASC</option>
			<option value="plugin_name DESC">COM_ODYSSEY_PLUGIN_NAME_DESC</option>
			<option value="user ASC">JAUTHOR_ASC</option>
			<option value="user DESC">JAUTHOR_DESC</option>
			<option value="p.created ASC">JDATE_ASC</option>
			<option value="p.created DESC">JDATE_DESC</option>
			<option value="p.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="p.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_ODYSSEY_LIST_LIMIT"
			description="COM_ODYSSEY_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
