<?xml version="1.0" encoding="utf-8"?>

<form addrulepath="/administrator/components/com_odyssey/models/rules">

  <fieldset name="details">

	<field name="testimony_text" type="editor"
	       label="COM_ODYSSEY_FIELD_TESTIMONY_TEXT_LABEL"
	       description="COM_ODYSSEY_FIELD_TESTIMONY_TEXT_DESC"
	       filter="JComponentHelper::filterText" buttons="false"
	       required="true" />

	<field name="facebook" type="text"
		label="COM_ODYSSEY_FIELD_FACEBOOK_LABEL"
		description="COM_ODYSSEY_FIELD_FACEBOOK_DESC" />

	<field name="twitter" type="text"
		label="COM_ODYSSEY_FIELD_TWITTER_LABEL"
		description="COM_ODYSSEY_FIELD_TWITTER_DESC" />

	<field name="google_plus" type="text"
		label="COM_ODYSSEY_FIELD_GOOGLE_PLUS_LABEL"
		description="COM_ODYSSEY_FIELD_GOOGLE_PLUS_DESC" />

	<field name="pinterest" type="text"
		label="COM_ODYSSEY_FIELD_PINTEREST_LABEL"
		description="COM_ODYSSEY_FIELD_PINTEREST_DESC" />

	<field name="author_name" type="text"
		label="COM_ODYSSEY_FIELD_AUTHOR_NAME_LABEL"
		description="COM_ODYSSEY_FIELD_AUTHOR_NAME_DESC" 
		required="true" />

	<field name="travel_id" type="modal_travel"
		label="COM_ODYSSEY_FIELD_TRAVEL_ID_LABEL"
		description="COM_ODYSSEY_FIELD_TRAVEL_ID_DESC"
		required="true" />

	<!-- layout: title_alias -->
	<field name="title" type="text"
		label="COM_ODYSSEY_FIELD_TITLE_LABEL"
		description="COM_ODYSSEY_FIELD_TITLE_DESC"
		class="input-xxlarge input-large-text"
		required="true" />

	<!-- layout: publishingdata -->
	<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
	       description="JGLOBAL_FIELD_ID_DESC"
	       readonly="true" class="readonly" />

	<field name="published" type="list"
	       label="JSTATUS"
	       description="JFIELD_PUBLISHED_DESC"
	       class="inputbox" default="1">
		<option value="1">JPUBLISHED</option>
		<option value="0">JUNPUBLISHED</option>
		<option value="2">JARCHIVED</option>
		<option value="-2">JTRASHED</option>
	</field>

	<field name="created_by" type="user"
		label="COM_ODYSSEY_FIELD_CREATED_BY_LABEL" description="COM_ODYSSEY_FIELD_CREATED_BY_DESC" />

	<field name="created" type="calendar"
		label="COM_ODYSSEY_FIELD_CREATED_DATE_LABEL" description="COM_ODYSSEY_FIELD_CREATED_DATE_DESC"
		class="readonly" readonly="true" size="22" format="%Y-%m-%d %H:%M:%S"
		filter="user_utc" />

	<field name="modified" type="calendar" class="readonly"
		label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_ODYSSEY_FIELD_MODIFIED_DESC"
		size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

	</fieldset>
</form>



