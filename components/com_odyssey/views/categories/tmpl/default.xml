<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="com_odyssey_categories_view_default_title" option="com_odyssey_categories_view_default_option">
		<help key="JHELP_MENUS_MENU_ITEM_ODYSSEY_CATEGORIES" />
