<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" addfieldpath="/components/com_odyssey/models/fields">
		<field
			name="search"
			type="text"
		        label="COM_ODYSSEY_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field name="country"
			type="countryfilterlist"
			onchange="this.form.submit();" >
		</field>
		<field name="region"
			type="regionfilterlist"
			onchange="this.form.submit();" >
		</field>
		<field name="city"
			type="cityfilterlist"
			onchange="this.form.submit();" >
		</field>
		<field name="duration"
			type="durationfilterlist"
			onchange="this.form.submit();" >
		</field>
		<field name="date"
			type="datefilterlist"
			onchange="this.form.submit();" >
		</field>
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_ODYSSEY_LIST_LIMIT"
			description="COM_ODYSSEY_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
